{% extends 'base.html.twig' %}

{% block body %} 
      <div class="container">
      <br /><br /><br /><br /><br />
        <h1>Documents List!</h1>
        <p>Here are located your Documents</p>
        
        	{% for item in documents %}
             <hr />
             <h2>{{ item.id }}. {{ item.name }}</h2>
             <a href="{{ url('app_projects_document', { 'slug': item.slug }) }}">see details</a>
            {% endfor %}
            
      </div>
    </div>
{% endblock %}